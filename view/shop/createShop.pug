extend ../layouts/common

block content
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.mb-3
        a.navbar-brand(href='#')
            img(src="/images/p1.jpg", alt="lolol",width="30", height="30",loading="lazy")
        a.navbar-brand(href='#') CREATE SHOP
        #navbarNav.collapse.navbar-collapse
            ul.navbar-nav
                li.nav-item
                    a.nav-link(href='/product') Home
        if user
            p(style ="color:white;")= user.name                    
    if errors   
        each error in errors
            .alert.alert-danger(role='alert')= error
    form(action="/shop/create/createShop", method='post', enctype="multipart/form-data")
        .form-group
            label(for='shopName') Shop Name
            input#shopName.form-control(type='text', name='shopName')
        button.btn.btn-primary(type='submit') Create