extend ../layouts/common

block content
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.mb-3
        a.navbar-brand(href='#')
            img(src="/images/p1.jpg", alt="lolol",width="30", height="30",loading="lazy")
        a.navbar-brand(href='#') CREATE TRANSACTION
        #navbarNav.collapse.navbar-collapse
            ul.navbar-nav
                li.nav-item
                    a.nav-link(href='/trans') Home
    form(action="/trans/create" method="post")
        .input-group.mb-3
            .input-group-prepend
                label.input-group-text(for='inputGroupSelect01') User
            select#inputGroupSelect01.custom-select(name='user')
                option(selected='') Choose...
                each val in users
                    option(value= val.name) #{val.name}
        .input-group.mb-3
            .input-group-prepend
                label.input-group-text(for='inputGroupSelect01') Book
            select#inputGroupSelect01.custom-select(name='book')
                option(selected='') Choose...
                each val in books
                    option(value= val.title) #{val.title}
        button.btn.btn-success Create