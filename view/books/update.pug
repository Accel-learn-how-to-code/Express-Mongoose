extend ../layouts/common

block content
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.mb-3
        a.navbar-brand(href='#')
            img(src="/images/p1.jpg", alt="lolol",width="30", height="30",loading="lazy")
        a.navbar-brand(href='#') UPDATE BOOK
        #navbarNav.collapse.navbar-collapse
            ul.navbar-nav
                li.nav-item
                    a.nav-link(href='/books') Home
        if user
            p(style ="color:white;")= user.name  
    .row        
        .col-12.col-md-4
            .d-flex.justify-content-center
                if book.coverUrl
                    img.rounded.float-left(src= book.coverUrl, width="300px", height="300px",style="object-fit:cover;")
                else
                    img.rounded.float-left(src="https://picsum.photos/200", width="300px", height="300px",style="object-fit:cover;")
        .col-12.col-md-8                  
            form(action="/books/" + book.id + "/update" method="post", enctype="multipart/form-data")
                .form-group
                    label(for='exampleInputEmail1') Title
                    input#exampleInputEmail1.form-control(type='text', name='title', value= book.title)
                    label(for='exampleInputEmail1') Description
                    input#exampleInputEmail1.form-control(type='text', name='description', value= book.description)
                    label(for='bookAvatar') Cover Page
                    input#bookAvatar.form-control-file(type='file', name='coverUrl')
                button.btn.btn-primary(type='submit') Update